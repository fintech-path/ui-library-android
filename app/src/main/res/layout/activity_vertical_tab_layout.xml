<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <com.hcxc.verticaltablayout.VerticalTabLayout
        android:id="@+id/tab_layout_2"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="142dp"
        android:background="@android:color/holo_blue_dark"
        app:vDividerColor="@android:color/black"
        app:vDividerHeight="1px"
        app:vDividerPadding="15dp"
        app:vTabArrowColor="#cccccc"
        app:vTabHeight="30dp"
        app:vTabIconPadding="8dp"
        app:vTabIndicatorColor="@android:color/holo_green_dark"
        app:vTabIndicatorGravity="fill"
        app:vTabSelectedTextColor="@android:color/white"
        app:vTabTextColor="#555555"
        app:vTabTextSize="10dp"
        app:vTabViewGravity="center" />

    <com.hcxc.verticaltablayout.VerticalTabLayout
        android:id="@+id/tab_layout_1"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="#cccccc"
        app:vDividerColor="@android:color/holo_blue_dark"
        app:vDividerHeight="1px"
        app:vDividerPadding="15dp"
        app:vTabArrowColor="@android:color/holo_orange_dark"
        app:vTabArrowGravity="right"
        app:vTabArrowType="outer"
        app:vTabHeight="30dp"
        app:vTabIconPadding="8dp"
        app:vTabIndicatorColor="@android:color/holo_orange_dark"
        app:vTabIndicatorGravity="fill"
        app:vTabIndicatorWidth="15dp"
        app:vTabPaddingLeft="20dp"
        app:vTabSelectedTextColor="@android:color/white"
        app:vTabTextColor="#555555"
        app:vTabTextSize="10dp"
        app:vTabViewGravity="left" />

    <com.hcxc.verticaltablayout.VerticalTabLayout
        android:id="@+id/tab_layout_3"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tab_layout_2"
        android:background="#cccccc"
        app:vTabHeight="30dp"
        app:vTabIconPadding="8dp"
        app:vTabIndicatorColor="@android:color/holo_orange_dark"
        app:vTabIndicatorGravity="right"
        app:vTabIndicatorWidth="10dp"
        app:vTabPaddingRight="20dp"
        app:vTabSelectedTextColor="@android:color/holo_red_dark"
        app:vTabTextColor="#555555"
        app:vTabTextSize="10dp"
        app:vTabViewGravity="right" />

    <com.hcxc.verticaltablayout.VerticalTabLayout
        android:id="@+id/tab_layout_4"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tab_layout_3"
        android:background="@android:color/holo_green_light"
        app:vTabHeight="30dp"
        app:vTabIconPadding="8dp"
        app:vTabIndicatorColor="@android:color/holo_blue_light"
        app:vTabIndicatorCorners="15dp"
        app:vTabIndicatorGravity="fill"
        app:vTabPaddingRight="20dp"
        app:vTabSelectedTextColor="@android:color/holo_red_dark"
        app:vTabTextColor="#555555"
        app:vTabTextSize="10dp"
        app:vTabViewGravity="right" />

</RelativeLayout>
